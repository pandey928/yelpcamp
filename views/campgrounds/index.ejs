<% layout ("/layout/boilerplate")%>
<div id="cluster-map" ></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">create new</a>
    </div>
<% for(let campground of campgrounds){ %>
<div class="row">
    <div class="col-10 offset-1">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
            <div class="row">
                <div class="col-med-4">
                    <% if(campground.images.length) {%>
                    <img class="img-thumbnail" alt="" src="<%= campground.images[0].url%>">
                    <% } else{ %>
                        <img class="img-thumbnail" alt="" src="">
                    <% } %>

                </div>
            </div>
        </div>
                <div class="col-md-8">
                     <div class="card-body">
                        <h5 class="card-title "><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary ">view <%= campground.title %></a>
                        </p>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};

  </script>

<script src="/javascripts/clustermaps.js"></script>